<!DOCTYPE html>
<html lang="es">
<%- include("./partials/head") %>
<body>
	<%- include("./partials/header") %>
	
	<!-- Banner -->
	<div class="banner">
		<img src="/images/yoda banner.jpg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Productos</h2>
			</div>
			<!-- Mostrar todos los productos -->
			<% productos.forEach(function(producto) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/<%= producto.id %>">
							<figure class="product-box_image">
								<img src="/images/products/<%= producto.imagen %>" alt="<%= producto.nombre %>">
							</figure>
							<article class="product-box_data">
								<h2><%= producto.nombre %></h2>
								<p>Comentarios: <%= producto.Comentarios.length %></p>
								<p>Usuario: <a href="/profile"><%= producto.Usuario ? producto.Usuario.email : '' %></a></p>
							</article>
						</a>
					</section>
				</div>
			<% }); %>
		</div>
	</div>

	<%- include("./partials/footer") %>
	
</body>	
</html>
