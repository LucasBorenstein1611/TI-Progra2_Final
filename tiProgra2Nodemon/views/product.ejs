<!DOCTYPE html>
<html lang="es">
<%- include("./partials/head") %>
<body>
	<%- include("./partials/header") %>

	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"><%= producto.nombre %></h2> 
			<p class="product-detail-description">
				<a href="/products/agregar">Editar</a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="/images/products/kurama2.jpg" alt="" class="product-detail-img">
					<p class="product-detail-description">
						<%= producto.descripcion %>
					</p>
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">
						<% for( let i = 0; i < comentario.length; i++ ) { %>
							<article>
								<img src= <%= comentario[i].imagenPerfil %> alt="">
								<div class="data">
								  <p class="user">
									<strong><%= comentario[i].nombreUsuario %>:</strong>
									<%= comentario[i].texto %>
								  </p>
								</div>
							  </article>
						<% } %>
					  </section>
					  

					<form class="form" action="" method="POST">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<%- include("./partials/footer") %>

</body>	
</html>
