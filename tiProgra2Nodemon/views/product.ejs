<!DOCTYPE html>
<html lang="es">
<%- include("./partials/head") %>
<body>
	<%- include("./partials/header") %>

	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"><%= producto.nombre %></h2> 
			<p class="product-detail-description">
				<a href="/products/crear">Editar</a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="/images/products/kurama2.jpg" alt="" class="product-detail-img">
					<p class="product-detail-description">
						<%= producto.descripcion %>
					</p>
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">
						<article>
						  <img src= <%= comentario[0].imagenPerfil %> alt="">
						  <div class="data">
							<p class="user">
							  <strong><%= comentario[0].nombreUsuario %>:</strong>
							  <%= comentario[0].texto %>
							</p>
						  </div>
						</article>
					  
						<article>
							<img src= <%= comentario[1].imagenPerfil %> alt="">
							<div class="data">
							  <p class="user">
								<strong><%= comentario[1].nombreUsuario %>:</strong>
								<%= comentario[1].texto %>
							  </p>
							</div>
						  </article>
					  
						  <article>
							<img src= <%= comentario[2].imagenPerfil %> alt="">
							<div class="data">
							  <p class="user">
								<strong><%= comentario[2].nombreUsuario %>:</strong>
								<%= comentario[2].texto %>
							  </p>
							</div>
						  </article>
					  </section>
					  

					<form class="form" action="" method="POST">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<%- include("./partials/footer") %>

</body>	
</html>
