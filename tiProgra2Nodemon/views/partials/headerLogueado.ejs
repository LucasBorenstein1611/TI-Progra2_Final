<body>
	<!-- Header -->
	<header class="main-header">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-5 col-md-2">
					<a href="/" class="main-header_home-link">
						<img class="logoimg"src="/images/masteryoda.jpg">
					</a>
					<h1 class="HeaderPrincipal">La Guarida de Yoda</h1>
				</div>
				
	
				<div class="col-7 col-md-6">
					<form action="/products/buscar" method="GET" class="search-form">
						<input type="text" name="busqueda" placeholder="Buscar productos, marcas y más"
							class="search-form_input">
						<button type="submit" class="search-form_button"><i class="fas fa-search"></i></button>
					</form>
				</div>
	
				<div class="col-12 col-md-4">
					<a class="main-header_credit-link">
						<i class="fas fa-hand-holding-usd"></i>
						Todas las opiniones en un solo lugar.
					</a>
				</div>
			</div>
	
			<button class="btn-toggle-navbar">
				<i class="fas fa-bars"></i>
			</button>
	
			<nav class="main-navbar">
				<ul class="left-navbar">
					<li><a href="/">Todos los productos</a></li>
					<li><a href="/products/agregar">Cargar productos</a></li>
				</ul>
	
				<ul class="right-navbar">
					<li>
						<span class="user-greeting">¡Hola <%=locals.usuarioLogueado.nombre%>!</span>
					</li>
					<li>
						<a href="/profile/<%= locals.usuarioLogueado.id %>">
							<i class="fas fa-user"></i>
							<%= locals.usuarioLogueado.nombre %>
						</a>
					</li>
					<li>
						<form action="/profile/logout" method="get">
							<button type="submit">
								Cerrar sesión <i class="fas fa-sign-in-alt"></i>
							</button>
						</form>
					</li>
					<!-- Solo deslogueado <li>
						<a href="register.html">Creá tu cuenta <i class="far fa-address-card"></i>
						</a>
					</li>
					<li>
						<a href="login.html">Ingresá <i class="fas fa-sign-in-alt"></i></a>
					</li> -->
				</ul>
			</nav>
		</div>
	</header>
	<!-- /Header -->
	
</body>	
</html>