<!DOCTYPE html>
<html lang="es">
<%- include("./partials/head") %>
<body>
	<% if (locals.usuarioLogueado) { %>
		<%- include("./partials/headerLogueado") %>
	<% } else { %>
		<%- include("./partials/header") %>
	<% } %>

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="/images/users/<%= usuario.foto %>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%= usuario.nombre %>
						<a href="/profile-edit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li> <strong>Email:</strong> <%= usuario.email %></li>
						<li><%= producto.length %> productos </li>
						<li>200 seguidores</li>
						<li><%= usuario.comentarios.length %> comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for( let i = 0; i < producto.length; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/<%= producto[i].id %>">
							<figure class="product-box_image">
								<img src="/images/products/<%= producto[i].imagen %>" alt="cafetera moulinex">
							</figure>
							<article class="product-box_data">
								<h2><%= producto[i].nombre %></h2>
								<p><%= producto[i].descripcion %></p>
								<p>Comentarios: <%= producto[i].comentarios.length %></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
		</div>
	</div>
	<!-- /Mis productos -->


	<%- include("./partials/footer") %>
</body>	
</html>