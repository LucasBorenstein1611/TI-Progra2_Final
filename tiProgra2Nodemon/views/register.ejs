<!DOCTYPE html>
<html lang="es">
<%- include("./partials/head") %>

<body>
	<% if (locals.usuarioLogueado) { %>
		<%- include("./partials/headerLogueado") %>
	<% } else { %>
		<%- include("./partials/header") %>
	<% } %>

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Registrate</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<h2 class="col-12"></h2>
				<form action="/profile/create" method="POST" class="formulario">
					<label for="email">Email:</label>
					<input type="email" id="email" name="email" required><br>
				  
					<label for="nombre">Nombre:</label>
					<input type="text" id="nombre" name="nombre" required><br>
				  
					<label for="password">Contraseña:</label>
					<input type="password" id="password" name="password" required><br>
				  
					<label for="fechaNacimiento">Fecha de nacimiento:</label>
					<input type="date" id="fechaNacimiento" name="fechaNacimiento" required><br>
				  
					<label for="documento">Número de documento:</label>
					<input type="number" id="documento" name="documento" required><br>
				  
					<label for="foto">Foto de perfil (URL):</label>
					<input type="text" id="foto" name="foto"><br>
				  
					<button type="submit">Registrarse</button>
				  </form>				  


	<%- include("./partials/footer") %>
</body>

</html>